{
  "name": "service-haven-activities-capacity",
  "version": "2.0.0",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docker": "docker compose up",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate:down": "npm run typeorm -- migration:revert",
    "migrate:generate": "cross-var npm run typeorm -- migration:generate ./src/migrations/$npm_config_name",
    "migrate:up": "npm run build && npm run typeorm -- migration:run",
    "migration:create": "cross-var ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli migration:create ./src/migrations/$npm_config_name",
    "plop": "plop",
    "seed": "ts-node ./src/seeds",
    "setup": "yarn && docker compose up -d postgres && npm run migrate:up && npm run seed",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "teardown": "docker compose down",
    "test": "jest --detectOpenHandles --forceExit --colors --silent --runInBand",
    "test:cov": "jest --detectOpenHandles --forceExit --colors --silent --coverage --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "npm run test:setup-db && cross-env NODE_ENV=test jest --group=integration --detectOpenHandles --forceExit --colors --silent --runInBand && npm run test:teardown-db",
    "test:integration:watch": "npm run test:setup-db && jest --group=integration --watch --detectOpenHandles --colors --silent --runInBand",
    "test:setup-db": "docker compose -f \"docker-compose-test-db.yaml\" -p \"capacity-service-jest-db-container\" up -d && cross-env NODE_ENV=test npm run migrate:up && cross-env NODE_ENV=test npm run seed",
    "test:teardown-db": "docker compose -f \"docker-compose-test-db.yaml\" -p \"capacity-service-jest-db-container\" down",
    "test:unit": "jest --group=unit --detectOpenHandles --forceExit --colors --silent",
    "test:unit:watch": "jest --group=unit --watch",
    "type-check": "tsc --noEmit",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -d ./src/ormconfig.ts"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/controllers/*.{ts,tsx}",
      "**/src/filters/*.{ts,tsx}",
      "**/src/interceptors/*.{ts,tsx}",
      "**/src/middleware/*.{ts,tsx}",
      "**/src/modules/*.{ts,tsx}",
      "**/src/repositories/*.{ts,tsx}",
      "**/src/services/*.{ts,tsx}",
      "**/src/utils/*.{ts,tsx}",
      "**/src/app.module.ts"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "runner": "groups",
    "testEnvironment": "node",
    "testRegex": "(\\.|/)(test|spec|integration)\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@digikare/nestjs-prom": "^1.0.0",
    "@havenengineering/module-haven-logging": "^0.2.0",
    "@havenengineering/module-shared-apm": "^6.0.158",
    "@nestjs-steroids/async-context": "^2.0.0",
    "@nestjs/common": "^9.3.12",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.12",
    "@nestjs/platform-express": "^9.3.12",
    "@nestjs/swagger": "^6.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "chalk": "4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.9",
    "cross-var": "^1.1.0",
    "pg": "^8.10.0",
    "plop": "^3.1.2",
    "prom-client": "^14.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "rxjs": "^7.8.0",
    "typeorm": "0.3.12",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.12",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "29.5.0",
    "jest-runner-groups": "^2.2.0",
    "prettier": "^2.8.7",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "swagger-themes": "^1.2.28",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "^5.0.2",
    "typescript-plugin-css-modules": "^5.0.0"
  }
}
